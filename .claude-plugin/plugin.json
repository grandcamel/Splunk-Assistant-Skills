{
  "name": "splunk-assistant-skills",
  "version": "1.0.0",
  "description": "Natural language Splunk automation - search, job management, exports, and administration via Claude Code",
  "author": {
    "name": "grandcamel",
    "email": "jasonkrueger@gmail.com"
  },
  "homepage": "https://github.com/grandcamel/Splunk-Assistant-Skills",
  "repository": "https://github.com/grandcamel/Splunk-Assistant-Skills",
  "license": "MIT",
  "keywords": [
    "splunk",
    "search",
    "spl",
    "siem",
    "automation",
    "natural-language",
    "devops"
  ],
  "assistant_skills": {
    "requirements": "requirements.txt",
    "env_vars": [
      {
        "name": "SPLUNK_SITE_URL",
        "description": "Splunk server URL (e.g., https://splunk.example.com)",
        "required": true
      },
      {
        "name": "SPLUNK_TOKEN",
        "description": "Bearer authentication token (preferred auth method). Create in Splunk Web: Settings > Tokens",
        "required": false
      },
      {
        "name": "SPLUNK_USERNAME",
        "description": "Basic auth username (alternative to token)",
        "required": false
      },
      {
        "name": "SPLUNK_PASSWORD",
        "description": "Basic auth password (use with SPLUNK_USERNAME)",
        "required": false
      },
      {
        "name": "SPLUNK_MANAGEMENT_PORT",
        "description": "Splunk management API port (default: 8089)",
        "required": false
      },
      {
        "name": "SPLUNK_VERIFY_SSL",
        "description": "Verify SSL certificates (default: true)",
        "required": false
      },
      {
        "name": "SPLUNK_DEFAULT_APP",
        "description": "Default Splunk app context (default: search)",
        "required": false
      },
      {
        "name": "SPLUNK_DEFAULT_INDEX",
        "description": "Default search index (default: main)",
        "required": false
      },
      {
        "name": "SPLUNK_PROFILE",
        "description": "Profile name for multi-instance configurations (default: default)",
        "required": false
      }
    ]
  }
}
